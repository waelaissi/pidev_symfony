{% extends 'base_admin.html.twig' %}

{% block title %}Chambre index{% endblock %}

{% block body %}
    <div class="db-info-wrap">
        <div class="row">
            <div class="col-lg-12">
                <div class="dashboard-box table-opp-color-box">
                    <h3>Liste des chambres</h3>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Hotel</th>
                                    <th>Type</th>
                                    <th>Prix</th>
                                    <th>actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for chambre in chambres %}
                                <tr>
                                    <td>{{ chambre.idHotel.libelle }}</td>
                                    <td>{{ chambre.type }}</td>
                                    <td>{{ chambre.prix }}</td>
                                    <td>
                                        <a href="{{ path('app_chambre_edit', {'id': chambre.id}) }}">
                                            <i class="far fa-edit"></i>
                                        </a>
                                        <a href="{{ path('app_chambre_delete', {'id': chambre.id}) }}">
                                            {{ include('chambre/_delete_form.html.twig') }}
                                        </a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="5">no records found</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>


{% endblock %}
