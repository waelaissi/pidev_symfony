{% extends 'base_admin.html.twig' %}

{% block title %}hotelier{% endblock %}

{% block body %}
    {% include "partials/header_hotelier.html.twig" %}
    {% include "partials/navigation_panel_hotelier.html.twig" %}





    <div class="db-info-wrap">
        <div class="row">
            <div class="col-lg-12">
                <div class="dashboard-box user-form-wrap">
                    <h4>User Edit Details</h4>
                    <div class="form-horizontal">
                        {{ form_start(form,{'attr':{'novalidate':'novalidate'  }}) }}
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    {{ form_row(form.nom) }}
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    {{ form_row(form.prenom) }}
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    {{ form_row(form.cin) }}
                                </div>
                            </div>


                            <div class="col-sm-6">
                                <div class="form-group">

                                    {{ form_row(form.num_tel) }}
                                </div>
                            </div>
                            <div class="col-12">
                                <h4>Contact Details</h4>
                            </div>


                            <div class="col-sm-6">
                                <div class="form-group">


                                    {{ form_row(form.adresse) }}

                                </div>
                            </div>
                            <div class="col-12">
                                <h4> Profile Photo</h4>
                            </div>
                            <div class="col-md-6">
                                <div class="upload-input">
                                    <div class="form-group">
                                        <span readonly class="list-img"><img style="  border: 1px solid #ddd;border-radius: 4px;padding: 5px;width: 150px;" src="{{ asset('images/' ~ app.user.image) }}" alt=""> </span>

                                        <input type="file" name="myfile" disabled>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group col-md-12">
                                {{ form_row(form.image) }}
                            </div>
                            <div class="col-12">
                                <h4>Describe Your hotel </h4>
                            </div>
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label>Please Tell Us About Your hotel</label>
                                    {{ form_row(form.description) }}
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="button-primary" name="hotelierUpdate"> Valider Modification</button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>





{% endblock %}