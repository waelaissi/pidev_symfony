{% extends 'base.html.twig' %}

{% block title %}Commentaire index{% endblock %}

{% block body %}
    <h1>Commentaire index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Idcom</th>
                <th>Contenu</th>
                <th>Date</th>
                <th>Nblike</th>
                <th>Nbdislike</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commentaire in commentaires %}
            <tr>
                <td>{{ commentaire.idcom }}</td>
                <td>{{ commentaire.contenu }}</td>
                <td>{{ commentaire.date ? commentaire.date|date('Y-m-d') : '' }}</td>
                <td>{{ commentaire.nblike }}</td>
                <td>{{ commentaire.nbdislike }}</td>
                <td>
                    <a href="{{ path('app_commentaire_show', {'idcom': commentaire.idcom}) }}">show</a>
                    <a href="{{ path('app_commentaire_edit', {'idcom': commentaire.idcom}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_commentaire_new') }}">Create new</a>
{% endblock %}
