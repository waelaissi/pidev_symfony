{% extends 'base.html.twig' %}

{% block title hotel.libelle %}

{% block body %}



    <main role="main" class="container">
        <div class="container pt-5">
            <div class="row">
                <div class="col-md-6 mx-auto">
                    <article class="bg-white rounded shadow pet">
                        <div class="mw-100 rounded-top overflow-hidden">
                            <img src="{{ vich_uploader_asset(hotel) | imagine_filter('squared_thumbnail_medium') }}" alt="{{ hotel.libelle }}" class="w-100"/>
                        </div>
                        <h2 class="h5 pl-3 pt-3 text-secondary">
                            {{ hotel.libelle }}
                        </h2>
                        <p class="pl-3 pt-3 pr-3 pb-3 text-break">
                            {{ hotel.description }}
                        </p>
                        <div class="container">
                            <table class="table">
                                <tr>
                                    <td class="font-weight-bold">Region</td>
                                    <td>{{ hotel.region }}</td>
                                </tr>
                                <tr>
                                    <td>waelsss</td>
                                    <td>waelsss</td>
                                </tr>
                                <tr>
                                    <td>waelsss</td>
                                    <td>waelsss</td>
                                </tr>
                            </table>
                        </div>
                        <p class="pl-3 pb-3 text-center text-muted">
                            <small>

                            </small>
                        </p>
                    </article>
                </div>
            </div>
        </div>
        <div id="map" data-lat="{{ hotel.lat }}" data-lng="{{ hotel.lon }}">

        </div>
    </main>




    {% block javascripts %}
        <script>
            function initMap(){
                var m = document.getElementById("map");
                var lt = parseFloat(m.dataset.lat);
                var lg = parseFloat(m.dataset.lng);
                console.log(typeof lt , typeof lg);
                var options = {
                    zoom:6,
                    center: { lat: 33.85740350721518, lng :9.515796069219643}
                }
                var map = new google.maps.Map(m, options);

                var marker = new google.maps.Marker({
                    position: {lat: lt, lng: lg},
                    map: map
                })

            }


        </script>




    {% endblock %}
    <script
            src="https://maps.googleapis.com/maps/api/js?key=AIzaSyA66hmcT-ywu6EbCUhCJ7QYMDU-F3-441w&callback=initMap&v=weekly"
            async
    ></script>
{% endblock %}