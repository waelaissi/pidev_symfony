{% extends 'base.html.twig' %}

{% block title %}Hotel{% endblock %}

{% block body %}
    <h1>Hotel</h1>
    <a href="{{ path('app_hotel_index') }}">back to list</a>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ hotel.id }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ hotel.adresse }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ hotel.ville }}</td>
            </tr>
            <tr>
                <th>Region</th>
                <td>{{ hotel.region }}</td>
            </tr>
            <tr>
                <th>NumTel</th>
                <td>{{ hotel.numTel }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ hotel.description }}</td>
            </tr>
            <tr>
                <th>Libelle</th>
                <td>{{ hotel.libelle }}</td>
            </tr>
            <tr>
                <th>NbEtoiles</th>
                <td>{{ hotel.nbEtoiles }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ hotel.image }}</td>
            </tr>
        </tbody>
    </table>


{% endblock %}
