{% extends 'base_admin.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}






    <div class="login-page" style="background-image: url(/assetsadmin/images/bg.jpg);">
        <div class="login-from-wrap">
            <div class="login-from">
                <h1 class="site-title">
                    <a href="{{ path('app_hello') }}">
                        <img src="/assetsadmin/images/logo.png" alt="">
                    </a>
                </h1>
                <div class="content">
                    <div class="message-flah">
                        {% for flash_error in app.flashes('reset_password_error') %}
                            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                        {% endfor %}
                    </div>

                    {{ form_start(requestForm) }}
                    {{ form_row(requestForm.email) }}
                    <div>
                        <small>
                            Enter your email address and we will send you a
                            link to reset your password.
                        </small>
                    </div>

                    <button class="btn btn-outline-danger">Send password reset email</button>
                    {{ form_end(requestForm) }}
                </div>

                <a href="{{ path('app_login') }}" class="for-pass">Login</a>
            </div>
    </div>





