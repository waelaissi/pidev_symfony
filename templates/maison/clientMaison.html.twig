{% extends 'base.html.twig' %}

{% block title "Maisons"%}

{% block body %}
    <main role="main" class="container">
        <h1 class="mt-5 mb-3 text-center" style="color: #45ccb8">All maisons</h1>
        <div class="container">
            {% for row in maisons|batch(5) %}
                <div class="row mb-5">
                    {% for maison in maisons %}
                        <div class="col-md-4">
                            <article class="bg-white rounded shadow hotel">
                                <div class="mw-100 rounded-top overflow-hidden">
                                    <a href="{{ path('app_maison_show', {id: maison.id}) }}">
                                        <img src="{{ vich_uploader_asset(maison) | imagine_filter('squared_thumbnail_medium') }}" alt="{{ maison.adresse }}" class="w-100"/>
                                    </a>
                                </div>
                                <h2 class="h5 pl-3 pt-3">
                                    <a href="{{ path('app_maison_show', {id: maison.id}) }}" class="text-secondary text-decoration-none">{{ maison.adresse }}</a>
                                </h2>
                                <p class="pl-3 pb-2 text-muted">
                                    <small>

                                    </small>
                                </p>
                            </article>
                        </div>
                    {% endfor %}
                </div>
            {% endfor %}
        </div>
    </main>
    {{ knp_pagination_render(maisons) }}


{% endblock %}