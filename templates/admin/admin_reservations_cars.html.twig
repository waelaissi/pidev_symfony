    <script>
        var comparison_stats_chart=document.getElementById("myChartComparison");
        data_comparison=comparison_stats_chart.dataset.comparison;
        console.log("data_comparison"+data_comparison);
        data2=data_comparison.toString().split(',');
        var xyValues2 = [
        ];
        data2.forEach(function(value) {
            sub_data2=value.toString().split('.');
            xyValues2.push({x:sub_data2[0], y:sub_data2[1]})
        });

        new Chart("myChartComparison", {
            type: "bar",
            data: {
                datasets: [{
                    label: 'Revenus',
                    backgroundColor: [

                        'rgba(54, 162, 235, 0.2)',
                        'rgba(153, 102, 255, 0.2)',
                        'rgba(201, 203, 207, 0.2)'
                    ],
                    borderColor: [
                        'rgb(255, 99, 132)',
                        'rgb(255, 159, 64)',
                        'rgb(255, 205, 86)',
                        'rgb(75, 192, 192)',
                        'rgb(54, 162, 235)',
                        'rgb(153, 102, 255)',
                        'rgb(201, 203, 207)'
                    ],
