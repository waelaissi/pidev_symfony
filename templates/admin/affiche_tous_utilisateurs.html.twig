{% extends 'base_admin.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% include "partials/header_admin.html.twig" %}
    {% include "partials/navigation_panel_admin.html.twig" %}


    <div class="db-info-wrap">
        <div class="col-lg-36">
            <div class="dashboard-box table-opp-color-box">
                <h4>List des Utilisateurs</h4>
                <p>Airtport Hotels The Right Way To Start A Short Break Holiday</p>
                <div class="table-responsive">
                    <div class="message-flash">
                        {% for message in app.flashes('success') %}
                            <div class="alert alert-success">
                                {{ message }}
                            </div>
                        {% endfor %}
                    </div>
                    <table class="table" id="tab">
                        <thead>
                        <tr>

                            <th>user</th>
                            <th>email</th>
                            <th>nom</th>
                            <th>num_tel</th>
                            <th>adresse</th>
                            <th>etat</th>
                            <th>action</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for users in users %}
                            <tr>
                                <td>
                                    <span class="list-img"><img src="{{ asset('images/' ~ users.image) }}"
                                                                alt=""> </span>

                                </td>
                                <td>{{ users.email }}</td>
                                <td>{{ users.nom }}</td>
                                <td>{{ users.NumTel }}</td>
                                <td>{{ users.adresse }}</td>

                                <td>
                                    {% if users.etat == "activer" %}
                                        <span class="badge badge-success">{{ users.etat }} </span>
                                    {% else %}
                                        <span class="badge badge-danger">{{ users.etat }} </span>
                                    {% endif %}
                                </td>

                                <td>

                                    {% if users.etat == "activer" %}
                                        <button type="button" data-toggle="modal"
                                                data-target="#exampleModalCenter">
                                            <span class="badge badge-danger">desactiver</span>
                                        </button>

                                        <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog"
                                             aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                            <div class="modal-dialog modal-dialog-centered" role="document">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="exampleModalLongTitle">
                                                            Activation/Desactivation des Utilisateurs</h5>
                                                        <button type="button" class="close" data-dismiss="modal"
                                                                aria-label="Close">
                                                            <span aria-hidden="true">&times;</span>
                                                        </button>
                                                    </div>
                                                    <div class="modal-body">
                                                        vous etes sure de cette desactivation
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-info" data-dismiss="modal">
                                                            Cancel
                                                        </button>
                                                        <button type="button" class="btn btn-danger"><a
                                                                    href="{{ path('desactiverUser',{'id':users.id}) }}">
                                                                <span class="badge badge-danger">desactiver</span></a>
                                                        </button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                    {% else %}
                                        <button type="button" data-toggle="modal"
                                                data-target="#exampleModalCenter2">
                                            <span class="badge badge-warning">activer</span>
                                        </button>

                                        <div class="modal fade" id="exampleModalCenter2" tabindex="-1" role="dialog"
                                             aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                            <div class="modal-dialog modal-dialog-centered" role="document">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="exampleModalLongTitle">
                                                            desactivation/Desactivation des Utilisateurs</h5>
                                                        <button type="button" class="close" data-dismiss="modal"
                                                                aria-label="Close">
                                                            <span aria-hidden="true">&times;</span>
                                                        </button>
                                                    </div>
                                                    <div class="modal-body">
                                                        vous etes sure de cette activation
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-info" data-dismiss="modal">
                                                            cancel
                                                        </button>
                                                        <button type="button" class="btn btn-danger"><a
                                                                    href="{{ path('activerUser',{'id':users.id}) }}">
                                                                <span class="badge badge-danger">activer</span></a>
                                                        </button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                    {% endif %}
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td> acun utilisateur trouve√©</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>


{% endblock %}