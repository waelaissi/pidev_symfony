{% extends 'base.html.twig' %}

{% block title %}Account Tfarhida!{% endblock %}

{% block body %}
    {{ include("partials/header.html.twig") }}


    <div class="section">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-4">
                    <div class="dashboard_menu">
                        <ul class="nav nav-tabs flex-column" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('account') }}"> dashboard</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_logout') }}"><i class="ti-lock"></i>Logout</a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-9 col-md-8">
                    <div class="tab-content dashboard_content">
                        <div class="tab-pane fade active show" id="dashboard" role="tabpanel"
                             aria-labelledby="dashboard-tab">
                            <div class="card">
                                <div>
                                    <h3>welcome {{ app.user.nom | upper }} {{ app.user.prenom | upper }} Changement de
                                        votre mot de passe
                                    </h3>
                                    <div class="card-header" id="account-detail" role="tabpanel"
                                         aria-labelledby="account-detail-tab">
                                        <div class="card">
                                            <div class="card-header">
                                                <h3>Password Reset</h3>
                                            </div>
                                            <div class="card-body">
                                                <div>
                                                    {{ form_start(form,{'attr':{'novalidate':'novalidate'  }}) }}

                                                    <div class="row">
                                                        <div class="form-group col-md-6">
                                                            {{ form_row(form.oldPassword) }}
                                                        </div>
                                                        <div class="form-group col-md-6">
                                                            {{ form_row(form.plainPassword) }}
                                                        </div>
                                                        <div class="col-md-12">
                                                        </div>
                                                        {{ form_end(form) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>





{% endblock %}
