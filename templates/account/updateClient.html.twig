{% extends 'base.html.twig' %}

{% block title %}Account Tfarhida!{% endblock %}

{% block body %}
    {{ include("partials/header.html.twig") }}
    <div class="section">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-4">
                    <div class="dashboard_menu">
                        <ul class="nav nav-tabs flex-column" role="tablist">


                            <li class="nav-item">

                                <a class="nav-link" href="{{ path('account') }}"> dashboard</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_logout') }}"><i class="ti-lock"></i>Logout</a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-9 col-md-8">

                    <div class="alert alert-success alert-dismissible fade show" role="alert"> message flash
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>


                    <div class="tab-content dashboard_content">
                        <div class="tab-pane fade active show" id="dashboard" role="tabpanel"
                             aria-labelledby="dashboard-tab">
                            <div class="card">
                                <div>
                                    <h3>welcome {{ app.user.nom | upper }} {{ app.user.prenom | upper }} feels free to
                                        update your account</h3>
                                    <div class="card-header" id="account-detail" role="tabpanel"
                                         aria-labelledby="account-detail-tab">
                                        <div class="card">
                                            <div class="card-header">
                                                <h3>Update Account Details</h3>
                                            </div>
                                            <div class="card-body">
                                                <div>
                                                    {{ form_start(form,{'attr':{'novalidate':'novalidate'  }}) }}

                                                    <div class="row">

                                                        <div class="form-group col-md-6">
                                                            {{ form_row(form.nom) }}
                                                        </div>
                                                        <div class="form-group col-md-6">
                                                            {{ form_row(form.prenom) }}
                                                        </div>
                                                        <div class="form-group col-md-12">
                                                            {{ form_row(form.num_tel) }}
                                                        </div>

                                                        <div class="form-group col-md-12">
                                                            {{ form_row(form.cin) }}
                                                        </div>
                                                        <div class="form-group col-md-12">
                                                            {{ form_row(form.adresse) }}
                                                        </div>
                                                        <div class="form-group col-md-12">
                                                            {{ form_row(form.image) }}
                                                        </div>
                                                        <div class="col-md-12">
                                                            <button type="submit" class="btn btn-primary"
                                                                    name="clientupdate"> Update
                                                            </button>
                                                        </div>
                                                        {{ form_end(form) }}

                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>





{% endblock %}
